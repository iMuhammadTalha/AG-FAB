<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_seed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_seed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/seed_color1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_fertilizer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/frame_seed">

        <Button
            android:id="@+id/button_fertilizer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/fertilizer_color1"
            android:translationX="-10dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_pesticide"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/frame_fertilizer">

        <Button
            android:id="@+id/button_pesticide"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/pesticide_color1"
            android:translationX="-20dp" />
    </FrameLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_seed"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
